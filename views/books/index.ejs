<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>This is the Index page</h1>
    <% if (books.length == 0) { %>
        <h3>There are no books yet!</h3>
    <% } %>
    <% books.forEach((b) => { %>
        <ul>
            <li>Title: <%= b.title %> </li>
            <li>Read: <%= b.read %> </li>
            <li><a href="/books/<%= b._id %>">Details</a></li>
        </ul>
    <% }); %>

    <a href="/books">New book</a>
    <a href="/">Home page</a>
</body>
</html>
